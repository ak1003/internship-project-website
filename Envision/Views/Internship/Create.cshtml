@model Envision.Models.InternshipRegErr

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Envision</title>
    <link rel="stylesheet" href="~/Content/css/style.css" type="text/css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .dropdown {
            float: left;
            overflow: hidden;
        }

            .dropdown .dropbtn {
                font-size: 16px;
                border: none;
                outline: none;
                color: #000;
                padding: 14px 16px;
                background-color: inherit;
            }

            .dropdown:hover .dropbtn {
                background-color: #032042;
                color: #ffffff;
            }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                float: none;
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: left;
            }

                .dropdown-content a:hover {
                    background-color: #032042;
                    color: #fff;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        #map {
            width: 100%;
        }

        .controls {
            background-color: #fff;
            border-radius: 2px;
            border: 1px solid transparent;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
            box-sizing: border-box;
            font-family: Roboto;
            font-size: 15px;
            font-weight: 300;
            height: 29px;
            margin-left: 17px;
            margin-top: 10px;
            outline: none;
            padding: 0 11px 0 13px;
            text-overflow: ellipsis;
            width: 400px;
        }

            .controls:focus {
                border-color: #4d90fe;
            }

        .title {
            font-weight: bold;
        }

        #infowindow-content {
            display: none;
        }

        #map #infowindow-content {
            display: inline;
        }

        body {
            background: url(../../Content/images/photo_bg.jpg) no-repeat center center fixed;
            background-size: cover;
            line-height: 1.8;
            font-family: "Raleway", sans-serif;
            margin: 0;
            color: #666;
        }

        .w3-bar .w3-button {
            padding: 16px;
        }

        /* Typography */
        h1#title {
            font-family: 'Roboto Slab', serif;
            font-weight: 300;
            font-size: 3.2em;
            color: white;
            text-shadow: 0 0 10px rgba(0,0,0,0.8);
            margin: 0 auto;
            padding-top: 180px;
            max-width: 300px;
            text-align: center;
            position: relative;
            top: 0px;
        }

            h1#title span span {
                font-weight: 400;
            }

        h2 {
            text-transform: uppercase;
            color: white;
            font-weight: 400;
            letter-spacing: 1px;
            font-size: 1.4em;
            line-height: 2.8em;
        }

        a {
            text-decoration: none;
            color: #666;
        }

            a:hover {
                color: #aeaeae;
            }

        p.small {
            font-size: 0.8em;
            margin: 20px 0 0;
            line-height: normal;
        }


        /* Layout */
        .container {
            margin: 0;

        }

        .top {
            margin: 0;
            padding: 0;
            width: 100%;
            background: -moz-linear-gradient(top, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0) 100%); /* FF3.6-15 */
            background: -webkit-linear-gradient(top, rgba(0,0,0,0.6) 0%,rgba(0,0,0,0) 100%); /* Chrome10-25,Safari5.1-6 */
            background: linear-gradient(to bottom, rgba(0,0,0,0.6) 0%,rgba(0,0,0,0) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#99000000', endColorstr='#00000000',GradientType=0 ); /* IE6-9 */
        }

        .login-box {
            background-color: white;
            width: 700px;
            margin: 0 auto;
            margin-bottom: 100px;
            position: relative;
            top: 80px;
            padding-bottom: 30px;
            border-radius: 5px;
            box-shadow: 0 5px 50px rgba(0,0,0,0.4);
            text-align: left;
        }

            .login-box .box-header {
                background-color: #032042;
                margin-top: 0;
                border-radius: 5px 5px 0 0;
            }

            .login-box label {
                font-weight: 800;
                color: #000;
                width: 80%;
                margin-left: 30px;
                letter-spacing: 1px;
                text-transform: uppercase;
            }



            .login-box input, select, textarea {
                padding: 8px;
                width: 80%;
                margin-left: 30px;
                border: 1px solid #ccc;
                border-radius: 2px;
                font-size: .9em;
                color: #888;
            }

                .login-box input[type=radio] {
                    width: 15px;
                    height: 15px;
                }

            .login-box .err {
                color: #ff0000;
                width: 80%;
                margin-left: 30px;
                font-size: .9em;
                margin-bottom: 20px;
            }

            .login-box input:focus, select:focus, textarea:focus {
                outline: none;
                border-color: #032042;
                transition: 0.5s;
                color: #665851;
            }

            .login-box button {
                margin-top: 0px;
                border: 0;
                border-radius: 2px;
                color: white;
                padding: 10px;
                text-transform: uppercase;
                font-weight: 400;
                font-size: 0.7em;
                letter-spacing: 1px;
                background-color: #032042;
                cursor: pointer;
                outline: none;
            }

                .login-box button:hover {
                    opacity: 0.7;
                    transition: 0.5s;
                }

                .login-box button:hover {
                    opacity: 0.7;
                    transition: 0.5s;
                }

        .selected {
            color: #032042 !important;
            transition: 0.5s;
        }

        /* Animation Delay */
        #logo {
            -webkit-animation-duration: 1s;
            -webkit-animation-delay: 2s;
        }

        .login-box {
            -webkit-animation-duration: 1s;
            -webkit-animation-delay: 1s;
        }
    </style>
</head>
<body>
    @if (Session["user_type"].Equals("STD"))
    {
        @Html.Partial("~/Views/Shared/StudentHeader.cshtml")
    }
    else if (Session["user_type"].Equals("CMP"))
    {
        @Html.Partial("~/Views/Shared/CompanyHeader.cshtml")
    }
    else
    {
        @Html.Partial("~/Views/Shared/GuestHeader.cshtml")
    }

    <form action="/Internship/Create" method="post" enctype="multipart/form-data">
        <div class="container w3-display-container">
            <div class="login-box">
                <div class="box-header" style="text-align:center;">
                    <h2>Add Internship</h2>
                </div>
                <div class="w3-margin-top">
                    <label for="contactemail">Contact Email For Internship&nbsp;*</label><br />
                    <input type="email" id="contactemail" name="contactemail" value="@Model.i.ContactEmail"><br />
                    <span class="err">@Model.ContactEmail</span>
                </div>

                <div class="w3-margin-top" style="width:50%;float:left;">
                    <label for="contactmobile">Mobile Number</label><br />
                    <p class="small" style="margin-top:0px;margin-left:30px;width:80%;">Contact mobile number for internship</p>
                    <input type="number" id="contactmobile" style="width:200px!important;" name="contactmobile" value="@Model.i.ContactMobile"><br />
                    <span class="err"></span>
                </div>
                <div class="w3-margin-top" style="width:50%;float:right;">
                    <label for="stipend">Stipend For Internship</label><br />
                    <p class="small" style="margin-top:0px;margin-left:30px;width:80%;">Leave Empty if no stipend.</p>
                    <input type="number" id="stipend" style="width:100px!important;" name="stipend" value="@Model.i.ContactMobile">&nbsp;(In Rupees)<br />
                    <span class="err"></span>
                </div>
                
                <div class="w3-margin-top" style="width:50%;float:left;">
                    <label for="category">Internship In</label>
                    <p class="small" style="margin-top:0px;margin-left:30px;width:80%;">Internship can only be in a single category. Select only one choice.</p>
                    <select id="category" name="category" size="7">
                        @foreach (var item in ViewBag.Categories)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span class="err">@Model.Category</span>
                </div>

                <div class="w3-margin-top" style="width:50%;float:right;">
                    <label for="skills">Skills</label>
                    <p class="small" style="margin-top:0px;margin-left:30px;width:80%;">Hold down the Ctrl (windows) / Command (Mac) button to select multiple options.</p>
                    <select id="skills" name="skills" multiple size="7">
                        @foreach (var item in ViewBag.Skills)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span class="err"></span>
                </div>



                <div class="w3-margin-top" style="width:50%;float:left;">
                    <label for="locations">Locations</label>
                    <p class="small" style="margin-top:0px;margin-left:30px;width:80%;">Hold down the Ctrl (windows) / Command (Mac) button to select multiple options.</p>
                    <select id="locations" name="locations" multiple size="7">
                        @foreach (var item in ViewBag.Locations)
                        {
                            <option value="@item.Id">@item.City</option>
                        }
                    </select>
                    <span class="err">@Model.Locations</span>
                </div>

                <div class="w3-margin-top" style="width:50%;float:right;">
                    <label for="perks">Perks</label>
                    <p class="small" style="margin-top:0px;margin-left:30px;width:80%;">Hold down the Ctrl (windows) / Command (Mac) button to select multiple options.</p>
                    <select id="perks" name="perks" multiple size="7">
                        @foreach (var item in ViewBag.Perks)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span class="err"></span>
                </div>


                <div class="w3-margin-top" style="width:50%;float:left;">
                    <label for="startdate">Internship Start Date</label><br />
                    <p class="small" style="margin-top:0px;margin-left:30px;width:80%;">Leave empty if one can start immediately</p>
                    @if (!string.IsNullOrWhiteSpace(Model.StartDate))
                    {
                        <input type="date" id="startdate" name="startdate" />
                    }
                    else
                    {
                        var sdate = Convert.ToDateTime(Model.StartDate).ToString("yyyy-MM-dd");
                        <input type="date" id="startdate" name="startdate" value="sdate" />
                    }
                    <span class="err">@Model.StartDate</span>
                </div>

                <div class="w3-margin-top" style="width:50%;float:right;">
                    <label for="applybefore">Last Date to Join</label><br />
                    <p class="small" style="margin-top:0px;margin-left:30px;width:80%;">Last date for a student to apply for an internship</p>
                    @if (!string.IsNullOrWhiteSpace(Model.ApplyBefore))
                    {
                        <input type="date" id="applybefore" name="applybefore" />
                    }
                    else
                    {
                        var adate = Convert.ToDateTime(Model.ApplyBefore).ToString("yyyy-MM-dd");
                        <input type="date" id="applybefore" name="applybefore" value="adate"/>
                    }
                    <span class="err">@Model.ApplyBefore</span>
                </div>



                <div class="w3-margin-top" style="width:50%;float:left;">
                    <label for="minduration">Minimum Duration</label><br />
                    <input type="number" id="minduration" style="width:60px!important;height:30px!important" name="minduration" value="@Model.i.MinDuration" />&nbsp;(In Months)<br />
                    <span class="err">@Model.MinDuration</span>
                </div>

                <div class="w3-margin-top" style="width:50%;float:right;">
                    <label for="maxduration">Maximum Duration</label><br />
                    <input type="number" id="maxduration" style="width:60px!important;height:30px!important" name="maxduration" value="@Model.i.MaxDuration" />&nbsp;(In Months)<br />
                    <span class="err">@Model.MaxDuration</span>
                </div>
                 
                <div class="w3-margin-top" style="width:60%;float:left;padding-right:0px!important;">
                    <label for="type">Type&nbsp;*</label><br />
                    <input type="radio" name="type" value="FT" checked />Full Time
                    @if (!string.IsNullOrWhiteSpace(Model.i.InternshipType) && Model.i.InternshipType.Equals("PT"))
                    {
                        <input type="radio" name="type" value="PT" checked />@:Part Time
                    }
                    else
                    {
                        <input type="radio" name="type" value="PT" />@:Part Time
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.i.InternshipType) && Model.i.InternshipType.Equals("WH"))
                    {
                        <input type="radio" name="type" value="WH" checked />@:Work From Home
                    }
                    else
                    {
                        <input type="radio" name="type" value="WH" />@:Work From Home
                    }
                    <span class="err"></span>
                </div> 
                <div class="w3-margin-top" style="width:40%;float:right">
                    <label for="seats">Seats For Internship&nbsp;*</label><br />
                    <input type="number" id="seats" name="seats" style="width:60px!important;height:30px!important" value="@Model.i.AvailableSeats"><br />
                    <span class="err">@Model.AvailableSeats</span>
                </div>
                  
                
                <div class="w3-margin-top" style="width: 100%!important;">
                    <label for="about">About Internship/ Internship Work&nbsp;*</label>
                    <textarea rows="6" name="about"></textarea><br />
                    <span class="err"></span>
                </div>
                <div class="w3-margin-top" style="text-align:center">
                    <button type="submit" style="letter-spacing:3px;font-weight: 700;padding: 10px 40px;">Add Internship</button>
                    <br />
                </div>
            </div>
        </div>
    </form>

</body>
</html>