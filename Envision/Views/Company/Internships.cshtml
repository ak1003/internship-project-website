@model IEnumerable<Envision.Models.InternshipView>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Envision</title>
    <link rel="stylesheet" href="~/Content/css/style.css" type="text/css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .dropdown {
            float: left;
            overflow: hidden;
        }

            .dropdown .dropbtn {
                font-size: 16px;
                border: none;
                outline: none;
                color: #000;
                padding: 14px 16px;
                background-color: inherit;
            }

            .dropdown:hover .dropbtn {
                background-color: #032042;
                color: #ffffff;
            }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                float: none;
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: left;
            }

                .dropdown-content a:hover {
                    background-color: #032042;
                    color: #fff;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        body, h1, h2, h3, h4, h5, h6 {
            font-family: "Raleway", sans-serif;
        }

        body, html {
            height: 100%;
            line-height: 1.8;
        }

        .w3-bar .w3-button {
            padding: 16px;
        }

        .recipe-card {
            background: #ececec;
            color: #000;
            border: 0.2px solid #032042;
            font-family: 'Open Sans', sans-serif;
            font-size: 1rem;
            margin: 0.5em;
            width: 90%;
            width: 600px;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
            border-bottom-left-radius: 5px;
            border-bottom-right-radius: 5px;
        }

            .recipe-card article {
                padding: 1.25em 1.5em;
            }

                .recipe-card article ul {
                    list-style: none;
                    margin: 0.5em 0 0;
                    padding: 0;
                }

                    .recipe-card article ul li {
                        display: inline-block;
                        margin-left: 1em;
                        line-height: 1em;
                    }

                        .recipe-card article ul li:first-child {
                            margin-left: 0;
                        }

                        .recipe-card article ul li .icon {
                            vertical-align: bottom;
                        }

                        .recipe-card article ul li span:nth-of-type(2) {
                            margin-left: 0.5em;
                            font-size: 0.8em;
                            font-weight: 300;
                            vertical-align: middle;
                            color: #838689;
                        }

                .recipe-card article .button {
                    right: 3%;
                    position: relative;
                    display: inline-block;
                    outline: 0;
                    padding: 8px 16px;
                    overflow: hidden;
                    text-decoration: none;
                    color: inherit;
                    background-color: inherit;
                    text-align: center;
                    cursor: pointer;
                    white-space: nowrap;
                }

                .recipe-card article h2, .recipe-card article h3 {
                    margin: 0;
                    font-weight: 300;
                }

                .recipe-card article h2 {
                    font-size: 1.75em;
                    color: #032042;
                }

                .recipe-card article h3 {
                    font-size: 0.9375em;
                    color: #002aff;
                }

                .recipe-card article p {
                    margin: 1.25em 0;
                    font-size: 0.9375em;
                    font-weight: 400;
                    color: #222222;
                }

                    .recipe-card article p span {
                        font-weight: 700;
                        color: #000000;
                    }

                .recipe-card article table {
                    width: 100%;
                }

                    .recipe-card article table tr th {
                        font-size: 15px;
                        font-weight: 400;
                        color: #222222;
                    }

                    .recipe-card article table tr td {
                        text-align: center;
                    }

                    .recipe-card article table tr th span {
                        font-weight: 700;
                        color: #000000;
                    }

                .recipe-card article .ingredients {
                    margin: 2em 0 0.5em;
                }

        h1 {
            display: table;
            margin: 0 auto;
        }

            h1 span {
                width: 50%;
                font-size: 20px;
                background: #f2f0e4;
                padding: 0 20px;
                text-align: center;
            }

            h1 + * {
                border-top: solid 2px #adac97;
                margin-top: -20px;
            }

        input[type="number"] {
            font-size: 1em;
            width: 80px;
        }

        /* Removes the clear button from date inputs */
        input[type="date"]::-webkit-clear-button {
            display: none;
        }

        /* Removes the spin button */
        input[type="date"]::-webkit-inner-spin-button {
            display: none;
        }

        /* Always display the drop down caret */
        input[type="date"]::-webkit-calendar-picker-indicator {
            color: #2c3e50;
        }

        /* A few custom styles for date inputs */
        input[type="date"] {
            width: 110px;
            appearance: none;
            -webkit-appearance: none;
            color: #616161;
            font-family: "Helvetica", arial, sans-serif;
            font-size: 13px;
            border: 1px solid #ccc;
            background: #ffffff;
            padding: 5px;
            display: inline-block !important;
            visibility: visible !important;
        }

        input[class="submit"] {
            background-color: #032042;
            color: white;
            border: none;
            padding-left: 5px;
            padding-top: 5px;
            padding-bottom: 5px;
            font-size: 1rem;
            margin-left: -5px;
            border-radius: 0px 5px 5px 0px;
            cursor: pointer;
        }

            input[class="submit"]:hover {
                opacity: 0.5;
            }

        input[class="button"] {
            background-color: #3b7116;
            color: white;
            border: none;
            padding-left: 20px;
            padding-top: 5px;
            padding-bottom: 5px;
            padding-right: 20px;
            font-size: 1rem;
            cursor: pointer;
        }

            input[class="button"]:hover {
                opacity: 0.5;
            }
    </style>
</head>
<body>
    @if (Session["user_type"].Equals("STD"))
    {
        @Html.Partial("~/Views/Shared/StudentHeader.cshtml")
    }
    else if (Session["user_type"].Equals("CMP"))
    {
        @Html.Partial("~/Views/Shared/CompanyHeader.cshtml")
    }
    else
    {
        @Html.Partial("~/Views/Shared/GuestHeader.cshtml")
    }

    @if (!string.IsNullOrWhiteSpace(ViewBag.ResError))
    {
        <div class="w3-content" style="margin-top:100px;">
            <span class="w3-text-red">@ViewBag.ResError</span>
        </div>
    }
    <div style="margin-top:100px;"></div>
    @if (string.IsNullOrWhiteSpace(ViewBag.ResError) && Model != null)
    {
        <div class="w3-content" style="margin-top: 50px">

            <div>
                <h1>Internships <span class="w3-margin-left"><i class="fa fa-plus" onclick="window.location.href='/Internship/Create'"></i></span></h1>
                @foreach (var item in Model)
                {
                    <div class="recipe-card">
                        <article>
                            @{
                                Dictionary<string, string> dict = new Dictionary<string, string>();
                                dict["WH"] = "Work From Home";
                                dict["PT"] = "Part Time";
                                dict["FT"] = "Full Time";
                            }
                            <h2 style="font-weight: bold;width:100%;">@Html.DisplayFor(modelItem => item.InternshipIn)<span style="float:right"><i class="fa fa-trash-o w3-margin-left" onclick="window.location.href='/Internship/Delete?id=@item.Id'"></i></span></h2>
                            <h3 style="margin-top: -7px;font-weight: 500">@Html.DisplayFor(modelItem => item.C_Name)<span class="w3-margin-left">@Html.DisplayFor(modelItem => item.CompanyType)</span></h3>
                            <label class="button" style="background-color:#000;color: #fff;cursor:none;margin-left:20px;border-radius:5px;height:30px;font-size:12px;">@dict[item.InternshipType]</label>
                            <p class="ingredients">
                                <span>Locations:&nbsp;</span>@foreach (var l in item.InternshipLocations)
                                {
                                    @Html.DisplayFor(modell => l) @:&nbsp
                            }
                            </p>
                            <table>
                                <tr>
                                    <th><span>Start Date</span></th>
                                    <th><span>Apply Before</span></th>
                                    <th><span>Posted On</span></th>
                                </tr>
                                <tr>
                                    @if (String.IsNullOrEmpty(item.StartDate.ToString()))
                                    {
                                        <td>Immediately</td>
                                    }
                                    else
                                    {
                                        var sd = ((DateTime)item.StartDate).ToShortDateString();
                                        <td>@Html.DisplayFor(modelItem => sd)</td>
                                    }
                                    @{var ab = item.ApplyBefore.ToShortDateString();}
                                    @{var po = item.PostedOn.ToShortDateString();}
                                    <td>@Html.DisplayFor(modelItem => ab)</td>
                                    <td>@Html.DisplayFor(modelItem => po)</td>
                                </tr>
                            </table>
                            <br>
                            <div class="w3-row">
                                <ul style="max-width: 300px;">
                                    <li><span class="fa fa-clock-o fa-lg w3-text-blue"></span><span>@Html.DisplayFor(modelItem => item.MinDuration) Month</span></li>
                                    <li><span class="fa fa-users fa-lg w3-text-blue"></span><span>@Html.DisplayFor(modelItem => item.AvailableSeats) Seats</span></li>
                                    @if (item.Stipend == null)
                                    {
                                        <li><span class="fa fa-money fa-lg w3-text-blue"></span><span>None Rs</span></li>
                                    }
                                    else
                                    {
                                        <li><span class="fa fa-money fa-lg w3-text-blue"></span><span>@Html.DisplayFor(modelItem => item.Stipend) Rs</span></li>
                                    }
                                </ul>
                                <label class="button" style="float: right;background-color: #032042;color: #ffffff;margin-top: -30px" onclick="window.location.href='/Internship/Details/@item.Id'">Details</label>
                            </div>

                        </article>
                    </div>
                                        }
            </div>
        </div>
                                        }
    
    
</body>
</html>
