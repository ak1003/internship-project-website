<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Envision</title>
    <link rel="stylesheet" href="~/Content/css/style.css" type="text/css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
                .dropdown {
    float: left;
    overflow: hidden;
}

.dropdown .dropbtn {
    font-size: 16px;    
    border: none;
    outline: none;
    color: #000;
    padding: 14px 16px;
    background-color: inherit;
}

.dropdown:hover .dropbtn {
    background-color: #032042;
    color:#ffffff;
}

.dropdown-content {
    display: none;
    position: absolute;
    background-color: #f9f9f9;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
}

.dropdown-content a {
    float: none;
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
    text-align: left;
}

.dropdown-content a:hover {
    background-color: #032042;
    color: #fff;
}

.dropdown:hover .dropdown-content {
    display: block;
}
        body {
            background: url(../../Content/images/photo_bg.jpg) no-repeat center center fixed;
            background-size: cover;
            line-height: 1.8;
            font-family: "Raleway", sans-serif;
            margin: 0;
            color: #666;
        }

        .w3-bar .w3-button {
            padding: 16px;
        }

        /* Typography */
        h1#title {
            font-family: 'Roboto Slab', serif;
            font-weight: 300;
            font-size: 3.2em;
            color: white;
            text-shadow: 0 0 10px rgba(0,0,0,0.8);
            margin: 0 auto;
            padding-top: 180px;
            max-width: 300px;
            text-align: center;
            position: relative;
            top: 0px;
        }

            h1#title span span {
                font-weight: 400;
            }

        h2 {
            text-transform: uppercase;
            color: white;
            font-weight: 400;
            letter-spacing: 1px;
            font-size: 1.4em;
            line-height: 2.8em;
        }

        a {
            text-decoration: none;
            color: #666;
        }

            a:hover {
                color: #aeaeae;
            }

        p.small {
            font-size: 0.8em;
            margin: 20px 0 0;
        }


        /* Layout */
        .container {
            margin: 0;
        }

        .top {
            margin: 0;
            padding: 0;
            width: 100%;
            background: -moz-linear-gradient(top, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0) 100%); /* FF3.6-15 */
            background: -webkit-linear-gradient(top, rgba(0,0,0,0.6) 0%,rgba(0,0,0,0) 100%); /* Chrome10-25,Safari5.1-6 */
            background: linear-gradient(to bottom, rgba(0,0,0,0.6) 0%,rgba(0,0,0,0) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#99000000', endColorstr='#00000000',GradientType=0 ); /* IE6-9 */
        }

        .login-box {
            background-color: white;
            max-width: 600px;
            margin: 0 auto;
            margin-bottom: 100px;
            position: relative;
            top: 80px;
            padding-bottom: 30px;
            border-radius: 5px;
            box-shadow: 0 5px 50px rgba(0,0,0,0.4);
            text-align: left;
        }

            .login-box .box-header {
                background-color: #032042;
                margin-top: 0;
                border-radius: 5px 5px 0 0;
            }

            .login-box label {
                font-weight: 800;
                color: #000;
                width: 80%;
                margin-left: 30px;
                letter-spacing: 1px;
                text-transform: uppercase;
            }

            .login-box input, select {
                padding: 8px;
                width: 80%;
                margin-left: 30px;
                border: 1px solid #ccc;
                border-radius: 2px;
                font-size: .9em;
                color: #888;
            }

                .login-box input[type=radio],input[type=checkbox] {
                    width: 15px;
                    height: 15px;
                }

            .login-box .err {
                color: #ff0000;
                width: 80%;
                margin-left: 30px;
                font-size: .9em;
                margin-bottom: 20px;
            }

            .login-box input:focus, select:focus {
                outline: none;
                border-color: #032042;
                transition: 0.5s;
                color: #665851;
            }

            .login-box button {
                margin-top: 0px;
                border: 0;
                border-radius: 2px;
                color: white;
                padding: 10px;
                text-transform: uppercase;
                font-weight: 400;
                font-size: 0.7em;
                letter-spacing: 1px;
                background-color: #032042;
                cursor: pointer;
                outline: none;
            }

                .login-box button:hover {
                    opacity: 0.7;
                    transition: 0.5s;
                }

                .login-box button:hover {
                    opacity: 0.7;
                    transition: 0.5s;
                }

        .selected {
            color: #032042 !important;
            transition: 0.5s;
        }

        /* Animation Delay */
        #logo {
            -webkit-animation-duration: 1s;
            -webkit-animation-delay: 2s;
        }

        .login-box {
            -webkit-animation-duration: 1s;
            -webkit-animation-delay: 1s;
        }
    </style>
</head>
<body>
    @if (Session["user_type"].Equals("STD"))
    {
        @Html.Partial("~/Views/Shared/StudentHeader.cshtml")
    }
    else if (Session["user_type"].Equals("CMP"))
    {
        @Html.Partial("~/Views/Shared/CompanyHeader.cshtml")
    }
    else
    {
        @Html.Partial("~/Views/Shared/GuestHeader.cshtml")
    }

    <form method="post" action="/Home/Login">
        <div class="container w3-display-container">
            <span class="w3-display-topright w3-button w3-round-medium w3-gray" style="margin-top:60px;margin-right:15px;"><a href="/Company/Create" style="text-decoration:underline;color: #0026ff">Looking for an intern?</a></span>
            <div class="login-box">
                <div class="box-header" style="text-align:center;">
                    <h2>Login</h2>
                </div>
                <span class="err">@ViewBag.Message</span>
                <div class="w3-margin-top">
                    <label for="email">Email&nbsp;*</label><br />
                    <input type="email" id="email" name="email"><br />
                    
                </div>
                <div class="w3-margin-top">
                    <label for="password">Password&nbsp;*</label>
                    <br />
                    <input type="password" id="password" name="password"><br />
                    
                </div>
                <div class="w3-margin-top">
                    <label for="type">Type of User</label>
                    <input type="radio" value="STD" name="type" checked/>Student
                    <input type="radio" value="CMP" name="type" />Company
                </div>
                <div class="w3-margin-top" style="text-align:center">
                    <button type="submit" style="letter-spacing:3px;font-weight: 700;padding: 10px 40px;">Log In</button>
                    <br />
                    <a href="/Student/Create" class="small">Register Yourself?</a><br />
                </div>
            </div>
        </div>
    </form>
</body>
</html>
